            "minLength": 1,
            "type": "string"
          },
          "description": {
            "minLength": 1,
            "type": "string"
          },
          "price": {
            "maximum": 99999.99,
            "minimum": 0.1,
            "type": "number",
            "format": "double"
          },
          "base64Img": {
            "minLength": 1,
            "type": "string"
          },
          "quantity": {
            "maximum": 99999,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "featured": {
